# Koinon RMS Development Environment Configuration
# Copy this file to .env and customize for your local environment
# This file should NOT be committed to version control with secrets

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=koinon
POSTGRES_PASSWORD=koinon
POSTGRES_DB=koinon
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# Connection string (for use by .NET applications)
ConnectionStrings__Koinon=Host=localhost;Port=5432;Database=koinon;Username=koinon;Password=koinon

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
ConnectionStrings__Redis=localhost:6379

# =============================================================================
# JWT Configuration
# =============================================================================
Jwt__Secret=development-secret-key-at-least-32-characters-long-for-dev-only
Jwt__Issuer=koinon
Jwt__Audience=koinon
Jwt__ExpiryMinutes=60

# =============================================================================
# API Configuration
# =============================================================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
ASPNETCORE_HTTPS_PORT=8443

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_BASE_URL=http://localhost:5000
VITE_API_V1_URL=http://localhost:5000/api/v1

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Koinon RMS
APP_VERSION=0.1.0
ENVIRONMENT=development

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=Information
SERILOG_MIN_LEVEL=Information
